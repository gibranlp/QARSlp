#!/usr/bin/env bash
# _______  _______  ______  _______  __        
#|       ||   _   ||   __ \|     __||  |.-----.
#|   -  _||       ||      <|__     ||  ||  _  |
#|_______||___|___||___|__||_______||__||   __|
#                                       |__|   
# QARSlp Qtile + Arch Ricing Script
# by: gibranlp <thisdoesnotwork@gibranlp.dev>
# MIT licence 
# 
browser="brave"

engine=$(echo "${@:1}")
search=$(echo "${@:2}")

if [[ -z "$engine" ]]; then
	surf=$(sr -elvi | awk -F'-' '{print $1}' | sed '/:/d' | awk '{$1=$1};1' |
	        rofi -theme '~/.config/rofi/websearch.rasi' -dmenu -p "ï„  Search the Web!")
elif [[ -z "$search" ]]; then
	surf=$(echo "" | rofi -theme '~/.config/rofi/websearch.rasi' -dmenu -p "$engine: ")
else
    surfraw -browser=$browser $engine &
    
fi

# Display prompt if !empty
case $surf in
	"") ;;
	*) $0 $engine $surf ;;
esac
